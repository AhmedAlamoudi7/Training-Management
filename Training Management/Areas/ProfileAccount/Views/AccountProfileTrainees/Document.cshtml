                    </div>                        <a href="~/ProfileAccount/AccountProfileTrainees/AddDocumnt/@ViewBag.TraineeIdKey" class="btn btn-primary align-self-end">Upload Document</a>

                    <!--begin::Card header-->
                    <!--begin::Content-->
                    <div id="kt_account_settings_profile_details" class="collapse show">

                        @foreach (var item in Model)
                        {
                            var message = item.FileName;
                            var arr = message.Split(".");


                            if (arr[1] == "jpg" || arr[1] == "png" || arr[1] == "svg" || arr[1] == "jpeg")
                            {


                                <img alt="Pic" height="200" src="~/Images/@item.FileName">

                            }
                            else if (arr[1] == "rar" || arr[1] == "zip"|| arr[1] == "pdf" || arr[1] == "doc" || arr[1] == "docx" || arr[1] == "xls" || arr[1] == "xlsx" || arr[1] == "ppt" || arr[1] == "pptx")
                            {
                                <embed src="~/Images/@item.FileName" height="100" />


                            }
     
                            else
                            {

                            }
                        }

                    </div>
