@using TrainingManagement.Constants;
@model List<TrainingProgrammeRequestViewModel>
@{
    ViewData["Title"] = "";

}
<style>
    a.btn.btn-bg-success.btn-color-muted.btn-active-color-primary.btn-sm.px-4.me-9, a.btn.btn-bg-danger.btn-color-muted.btn-active-color-primary.btn-sm.px-4.me-9 {
        color: aliceblue;
        FONT-WEIGHT: BOLDER;
    }

</style>
<!--begin::Content wrapper-->
<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container container-xxl">
            <div class="card mb-5 mb-xl-8">
                <!--begin::Header-->
                <div class="card-header border-0 pt-5">
                    <h3 class="card-title align-items-start flex-column">
                        <span class="card-label fw-bold fs-3 mb-1"> </span>
                        Training Programme
                    </h3>
                    <!--end:Action-->
                    <div class="d-flex align-items-center">
                        <a href="/ProfileAccount/AccountProfileTrainingProgrammesRequest/Create" class="btn btn-primary w-100">
                            <!--begin::Svg Icon | path: icons/duotune/communication/com005.svg-->
                            <span class="svg-icon svg-icon-2">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M20 14H18V10H20C20.6 10 21 10.4 21 11V13C21 13.6 20.6 14 20 14ZM21 19V17C21 16.4 20.6 16 20 16H18V20H20C20.6 20 21 19.6 21 19ZM21 7V5C21 4.4 20.6 4 20 4H18V8H20C20.6 8 21 7.6 21 7Z" fill="currentColor"></path>
                                    <path opacity="0.3" d="M17 22H3C2.4 22 2 21.6 2 21V3C2 2.4 2.4 2 3 2H17C17.6 2 18 2.4 18 3V21C18 21.6 17.6 22 17 22ZM10 7C8.9 7 8 7.9 8 9C8 10.1 8.9 11 10 11C11.1 11 12 10.1 12 9C12 7.9 11.1 7 10 7ZM13.3 16C14 16 14.5 15.3 14.3 14.7C13.7 13.2 12 12 10.1 12C8.10001 12 6.49999 13.1 5.89999 14.7C5.59999 15.3 6.19999 16 7.39999 16H13.3Z" fill="currentColor"></path>
                                </svg>
                            </span>
                            <!--end::Svg Icon-->Add New Item !
                        </a>
                    </div>
                </div>
                <!--end::Header-->
                <!--begin::Body-->
                <div class="card-body py-2">
                    <!--begin::Table container-->
                    <div class="table-responsive">
                        <!--begin::Table-->
                        <table class="table align-middle gs-0 gy-4">
                            <!--begin::Table head-->
                            <thead>
                                <tr class="fw-bold text-muted bg-light">

                                    <th class="min-w-125px" style="text-align: center;">Id </th>
                                    <th class="min-w-125px" style="text-align: center;">Training Program </th>
                                    <th class="min-w-125px" style="text-align: center;">Trainee </th>
                                    <th class="min-w-125px" style="text-align: center;">Status </th>
                                    <th class="min-w-125px" style="text-align: center;">Operations </th>


                                </tr>
                            </thead>
                            <!--end::Table head-->
                            <!--begin::Table body-->
                            		@foreach (var role in ViewBag.Roles)
								{
                                if (role == "SuperAdmin" || role == Constant.RolesFilter.Manager)
									{

                                    <tbody>

                                        @if (Model.Any())
                                        {
                                            int id = 1;
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="#" class="text-dark fw-bold text-hover-primary d-block mb-1 fs-6" style="text-align: center;">@id </a>

                                                    </td>
                                                    <td>
                                                        <a href="#" class="text-dark fw-bold text-hover-primary d-block mb-1 fs-6" style="text-align: center;">@item.TrainingProgram.Title </a>

                                                    </td>
                                                    <td>
                                                        <a href="#" class="text-dark fw-bold text-hover-primary d-block mb-1 fs-6" style="text-align: center;">@item.Trainee.FirstName @item.Trainee.LastName</a>
                                                    </td>
                                                    @if (item.status)
                                                    {
                                                        <td style="text-align: center;">
                                                            <button data-bs-dismiss="alert" type="button" class="btn btn-success btn-active-light-danger btn-sm">
                                                                غير مقبول
                                                            </button>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td style="text-align: center;">
                                                            <button data-bs-dismiss="alert" type="button" class="btn btn-danger btn-active-light-danger btn-sm">
                                                                مقبول
                                                            </button>
                                                        </td>
                                                    }
                                                    <td style="text-align: center;">
                                                        <a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                                            Chanage Active
                                                            <!--begin::Svg Icon | path: icons/duotune/arrows/arr072.svg-->
                                                            <span class="svg-icon svg-icon-5 m-0">
                                                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                                    <path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor" />
                                                                </svg>
                                                            </span>
                                                            <!--end::Svg Icon-->
                                                        </a>
                                                        <!--begin::Menu-->
                                                        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">

                                                            <!--end::Menu item-->
                                                            <!--begin::Menu item-->
                                                            <div class="menu-item px-3">
                                                                <a href="~/ProfileAccount/AccountProfileTrainingProgrammesRequest/ChangeActive/@item.Id" class="menu-link px-3" data-kt-users-table-filter="delete_row">Chanage Active</a>
                                                            </div>
                                                            <!--end::Menu item-->
                                                        </div>
                                                        <!--end::Menu-->
                                                    </td>
                                                </tr>
                                                id += 1;
                                            }

                                        }
                                        else
                                        {
                                            <tr>

                                                <div class="alert alert-warning" role="alert">no data yet !</div>
                                            </tr>
                                        }

                                    </tbody>

									}
                                else if (role == Constant.RolesFilter.Trainee || role == Constant.RolesFilter.Adviser)
									{

 
					 
							 
									}
								}
                            <!--end::Table body-->
                        </table>
                        <!--end::Table-->
                    </div>
                    <!--end::Table container-->
                </div>
                <!--begin::Body-->
            </div>

        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
</div>
<!--end::Content wrapper-->
